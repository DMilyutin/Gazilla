<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/grey_oval_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNameChildPresentsExList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toStartOf="@+id/imgFavoritIcon"
            app:layout_constraintStart_toEndOf="@+id/imgMiniItemMemu"
            app:layout_constraintTop_toTopOf="@+id/imgMiniItemMemu" />

        <ImageView
            android:id="@+id/imgMiniItemMemu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCoastChildPresentsExLists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgMiniItemMemu"
            app:layout_constraintStart_toEndOf="@+id/imgMiniItemMemu" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvCoastChildPresentsExLists"
            app:layout_constraintStart_toEndOf="@+id/tvCoastChildPresentsExLists"
            app:layout_constraintTop_toTopOf="@+id/tvCoastChildPresentsExLists"
            app:srcCompat="@drawable/gaz" />

        <TextView
            android:id="@+id/tvDescriptionChildPresentsExList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="400 гр"
            app:layout_constraintStart_toEndOf="@+id/imgMiniItemMemu"
            app:layout_constraintTop_toBottomOf="@+id/tvNameChildPresentsExList" />

        <ImageView
            android:id="@+id/imgFavoritIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_grade_grey24dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_down_to_up_gold"
            app:layout_constraintBottom_toBottomOf="@+id/imgMiniItemMemu"
            app:layout_constraintEnd_toEndOf="@+id/imgMiniItemMemu"
            app:layout_constraintStart_toStartOf="@+id/imgMiniItemMemu"
            app:layout_constraintTop_toTopOf="@+id/imgMiniItemMemu">

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>